{
  "compilerOptions": {
    "target": "ES2023",
    "baseUrl": "./",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@*": ["./*"],
      "@app/*": ["./app/*"],
      "@auth": ["./auth"],
      "@client-api/*": ["./app/api/*"],
      "@components/*": ["./app/clientComponents/*"],
      "@context/*": ["./app/context/*"],
      "@interfaces/*": ["./app/interfaces/*"],
      "@lib/*": ["./lib/*"],
      "@postures/*": ["./app/navigator/asanaPostures/*"],
      "@prismaSchema/*": ["./prisma/*"],
      "@providers/*": ["./app/providers/*"],
      "@serverComponents/*": ["./components/*"],
      "@styles/*": ["./styles/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest",
    "jest.setup.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
